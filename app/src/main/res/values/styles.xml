<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="formFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>

    </style>

    <style name="TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="EditTextDecimalStyle" parent="formFieldStyle">
       <item name="android:inputType">numberDecimal</item>

    </style>

    <style name="EditTextPhoneStyle" parent="formFieldStyle">
       <item name="android:inputType">phone</item>

    </style>

    <style name="EditTextEmailStyle" parent="formFieldStyle">
       <item name="android:inputType">textEmailAddress</item>

    </style>

    <style name="EditTextNumberStyle" parent="formFieldStyle">
        <item name="android:inputType">number</item>
    </style>

</resources>